{% extends 'base.html.twig' %}

{% block title %}Actualités{% endblock %}

{% block body %}
    <h1>Actualités</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ news.title }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ news.content }}</td>
            </tr>
            <tr>
                <th>Dat de création</th>
                <td>{{ dateCreation }}</td>
            </tr>
            <tr>
                <th>Date d'édition</th>
                <td>{{ dateEdition }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_news_index') }}">Retour à la liste</a>

    <a href="{{ path('app_news_edit', {'id': news.id}) }}">Modifier</a>

    {{ include('news/_delete_form.html.twig') }}
{% endblock %}
