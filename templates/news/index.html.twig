{% extends 'base.html.twig' %}

{% block title %}Index des actualités{% endblock %}

{% block body %}
    <h1>Index des actualités</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Date de création</th>
                <th>Date d'édition</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for news in news %}
            <tr>
                <td>{{ news.title }}</td>
                <td>{{ news.content }}</td>
                <td>{{ news.dateCreation|date('d/m/Y') }}</td>
                <td>{{ news.dateEdition ? news.dateEdition|date('d/m/Y') : '' }}</td>
                <td>
                    <a href="{{ path('app_news_show', {'id': news.id}) }}">Voir</a>
                    <a href="{{ path('app_news_edit', {'id': news.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas d'actualités trouvées</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_news_new') }}">Créer</a>
{% endblock %}
