{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <h1>Utilisateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Rôles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Poste</th>
                <td>{{ user.jobTitle }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ user.description }}</td>
            </tr>
            <tr>
                <th>Image de profil</th>
                <td>{{ user.profilePicture }}</td>
            </tr>
            <tr>
                <th>Image de couverture</th>
                <td>{{ user.coverPicture }}</td>
            </tr>
            <tr>
                <th>Lien Facebook</th>
                <td>{{ user.facebookLink }}</td>
            </tr>
            <tr>
                <th>Lien Twitter</th>
                <td>{{ user.twitterLink }}</td>
            </tr>
            <tr>
                <th>Lien Instagram</th>
                <td>{{ user.instagramLink }}</td>
            </tr>
            <tr>
                <th>Lien LinkedIn</th>
                <td>{{ user.linkedinLink }}</td>
            </tr>
            <tr>
                <th>Vérifié</th>
                <td>{{ user.isVerified ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Approuvé</th>
                <td>{{ user.isApproved ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}">Retour à la liste</a>

    <a href="{{ path('app_user_edit', {'slug': user.slug}) }}">Modifier</a>


    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
