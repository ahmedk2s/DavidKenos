{% extends 'base.html.twig' %}

{% block title %}Liste des Posts{% endblock %}

{% block body %}

<div class="example-wrapper">
    <div class="right-part">
        {% if posts is not empty %}
            <ul>
                {% for post in posts %}
                
                    <li>{{ post.category.name }}</li>
                    <li><span class="firstname">{{ post.user.getFirstname }}</span> {{ post.user.getLastname }}</li>
                    <li>Publi√© le {{ post.dateCreation|date('d/m/Y ') }}</li>
                    <h4>{{ post.title }}</h4>
                    <p>{{ post.text }}</p>

                    {% include '_partials/_like.html.twig' %}
                {% endfor %}
            </ul>
        {% else %}
            <p>Aucun article n'est disponible pour le moment.</p>
        {% endif %}
    </div>
</div>
{% endblock %}
