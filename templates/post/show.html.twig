{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Texte</th>
                <td>{{ post.text }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ dateCreation }}</td>
            </tr>
            <tr>
                <th>Date d'édition</th>
                <td>{{ dateEdition }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ post.title }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_post_index') }}">Retour à la liste</a>

    <a href="{{ path('app_post_edit', {'slug': post.slug}) }}">Modifier</a>

    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
